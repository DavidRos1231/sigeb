db.ejemplares.find({})

db.ejemplares.aggregate([
{
$lookup: {
from: "libros",
localField: "libroId",
foreignField: "libroId",
as: "libro"
}
},
{
$unwind: "$libro"
},
{
$project: {
_id: "$_id",
idlibro: "$idlibro",
nombre: "$libro.nombre",
estado: "$estado",
descripcion: "$descripcion",
enable: "$enable",
editorial: "$editorial"
}
}
])

